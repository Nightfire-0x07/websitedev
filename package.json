{
    "name": "devilsec-website",
    "version": "0.7.0",
    "description": "DevilSec's website.",
    "author": "DevilSec",
    "license": "none",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/devilsec/website.git"
    },
    "bugs": {
        "url": "https://github.com/devilsec/website/issues"
    },
    "homepage": "https://github.com/devilsec/website",
    "scripts": {
        "css-compile": "sass --load-path=node_modules --style=compressed --source-map scss:assets/scss",
        "css-lint": "stylelint scss/",
        "css-prefix": "postcss --replace assets/css/starter.css --use autoprefixer --map",
        "css-purge": "purgecss --keyframes --css assets/css/starter.css --content index.html \"node_modules/bootstrap/js/dist/{util,modal}.js\" --output assets/css/",
        "css": "npm-run-all css-compile css-prefix",
        "lint": "npm run css-list",
        "build": "npm run css",
        "clean-build": "npm run css-purge css",
        "server": "serve --listen 8080",
        "watch": "nodemon -e html,scss -x \"npm run css\"",
        "start": "npm-run-all --parallel watch server",
        "wtest": "webpack-dev-server --open",
        "wbuild": "webpack",
        "test": "npm run lint & npm run css"
    },
    "dependencies": {
        "@popperjs/core": "^2.11.5",
        "babel-loader": "^8.2.5",
        "bootstrap": "^5.1.3",
        "bootstrap-icons": "^1.8.1",
        "css-loader": "^6.7.1",
        "font-awesome": "^4.7.0",
        "html-loader": "^3.1.0",
        "html-webpack-plugin": "^5.5.0",
        "jquery": "^3.6.0",
        "lit": "^2.2.2",
        "postcss": "^8.4.12",
        "postcss-loader": "^6.2.1",
        "sass": "^1.50.1",
        "sass-loader": "^12.6.0",
        "simple-icons": "^6.18.0",
        "style-loader": "^3.3.1",
        "stylelint-config-twbs-bootstrap": "^3.0.1",
        "webpack": "^5.72.0"
    },
    "devDependencies": {
        "@babel/eslint-parser": "^7.17.0",
        "eslint": "^8.13.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-react": "^7.29.4",
        "eslint-plugin-react-hooks": "^4.4.0",
        "eslint-webpack-plugin": "^3.1.1",
        "gulp": "^4.0.2",
        "nodemon": "^2.0.15",
        "npm-run-all": "^4.1.5",
        "postcss-cli": "^9.1.0",
        "postcss-scss": "^4.0.3",
        "serve": "^13.0.2",
        "stylelint": "^14.7.1",
        "stylelint-config-prettier": "^9.0.3",
        "stylelint-config-standard": "^25.0.0",
        "stylelint-config-standard-scss": "^3.0.0",
        "webpack-cli": "^4.9.2",
        "webpack-dev-server": "^4.8.1"
    }
}
